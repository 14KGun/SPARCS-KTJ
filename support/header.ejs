<div id="header" class="ND">
    <button id="header_btn0" class="BTNC">
        <div id="header_btn0_T">T</div>
    </button>
    <div id="header_btn0line"></div>
    <div class="HEADER_BTN BTNC" id="header_btn_1">
        <button class="HEADER_BTN_A BTNC">예약하기</button>
        <div class="HEADER_BTN_B" id="header_btn_1_btm"></div>
    </div>
    <div class="HEADER_BTN BTNC" id="header_btn_2">
        <button class="HEADER_BTN_A BTNC">마이페이지</button>
        <div class="HEADER_BTN_B" id="header_btn_2_btm"></div>
    </div>
    <button id="header_login" class="BTNC">로그인</button>
</div>

<style>
    #header{
        width: 100%; height: 70px;
        position: fixed; top: 0px; left: 0px;
        border-bottom: 2px solid rgb(230,230,230);
        background: white;
    }
    #header_btn0{
        width: 70px; height: 70px;
        margin-left: 10px; margin-right: 10px;
        float: left;
    }
    #header_btn0_T{
        margin: 15px;
        width: 40px; height: 40px; border-radius: 20px;
        background: rgb(250,200,20);
        line-height: 40px;
        color: white; font-size: 25px; font-weight: 700;
    }
    #header_btn0line{
        width: 1px; height: 40px; margin-top: 15px;
        border-right: 1px solid rgb(200,200,200);
        float: left;
    }

    .HEADER_BTN{
        float: left;
        height: 72px;
        margin-left: 20px;
    }
    .HEADER_BTN_A{
        height: 69px; line-height: 70px;
        font-size: 17px; font-weight: 300;
    }
    .HEADER_BTN_B{
        width: 0%; height: 4px;
        margin: auto;
        background: rgb(250,200,20);
    }
    #header_login{
        float: right;
        height: 100%; line-height: 70px;
        padding-right: 20px; padding-left: 20px;
        font-size: 17px; font-weight: 300;
    }
</style>

<script>
    $(document).ready(function(){
        /* HOVER */
        $('#header_btn0_T').hover(function(){
            $(this).stop().animate({ backgroundColor: 'rgb(230,180,0)' }, 100);
        }, function(){
            $(this).stop().animate({ backgroundColor: 'rgb(250,200,20)' }, 100);                
        });
        $('#header_login').hover(function(){
            $(this).stop().animate({ backgroundColor: 'rgba(150,150,150,0.1)' }, 100);
        }, function(){
            $(this).stop().animate({ backgroundColor: 'rgba(150,150,150,0)' }, 100);                
        });
        $('#header_btn_1').hover(function(){
            $('#header_btn_1_btm').stop().animate({ width: '100%' }, 200);
        }, function(){
            $('#header_btn_1_btm').stop().animate({ width: '0px' }, 200);               
        });
        $('#header_btn_2').hover(function(){
            $('#header_btn_2_btm').stop().animate({ width: '100%' }, 200);
        }, function(){
            $('#header_btn_2_btm').stop().animate({ width: '0px' }, 200);               
        });
        
        /* CLICK */
        $('#header_btn0').click(function(){
            location.href='/'
        });
        $('#header_btn_1').click(function(){
            location.href='/reservation'
        });
        $('#header_btn_2').click(function(){
            location.href='/mypage'
        });
        $('#header_login').click(function(){
            location.href='/login'
        });
    });
</script>